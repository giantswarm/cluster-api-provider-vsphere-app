{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "ciliumNetworkPolicy": {
        "type": "object",
        "properties": {
            "enabled": {
                "type": "boolean"
            }
        }
    },
    "crdInstall": {
      "type": "object",
      "properties": {
        "enable": {
          "type": "boolean"
        },
        "kubectl": {
          "type": "object",
          "properties": {
            "image": {
              "type": "string"
            },
            "registry": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          }
        }
      }
    },
    "project": {
      "type": "object",
      "properties": {
        "branch": {
          "type": "string"
        },
        "commit": {
          "type": "string"
        }
      }
    },
    "global": {
      "type": "object",
      "properties": {
          "podSecurityStandards": {
              "type": "object",
              "properties": {
                  "enforced": {
                      "type": "boolean"
                  }
              }
          }
      }
    },
    "image": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "tag"
      ]
    },
    "ports": {
      "type": "object",
      "properties": {
        "healthz": {
          "type": "integer"
        },
        "metrics": {
          "type": "integer"
        },
        "webhook": {
          "type": "integer"
        }
      },
      "required": [
        "healthz",
        "metrics",
        "webhook"
      ]
    },
    "resources": {
      "type": "object",
      "properties": {
          "limits": {
              "type": "object",
              "properties": {
                  "cpu": {
                      "type": "string"
                  },
                  "memory": {
                      "type": "string"
                  }
              }
          },
          "requests": {
              "type": "object",
              "properties": {
                  "cpu": {
                      "type": "string"
                  },
                  "memory": {
                      "type": "string"
                  }
              }
          }
      }
    },
    "priorityClass": {
      "type": "string",
      "description": "priorityClass to apply to the deployment, set it to a high priority.",
      "examples": [
          "giantswarm-critical"
      ]
    },
    "serviceMonitor": {
      "type": "object",
      "properties": {
        "install": {
          "type": "boolean",
          "description": "Whether the ServiceMonitor CR should be rendered.",
          "default": "true"
        },
        "interval": {
            "type": "string",
            "default": "60s",
            "description": "Scrape interval for Prometheus.",
            "examples": ["30s", "2m"],
            "pattern": "^[0-9]+[smhd]$"
        },
        "scrapeTimeout": {
          "type": "string",
          "default": "45s",
          "description": "Scrape timeout for Prometheus.",
          "examples": ["30s", "2m"],
          "pattern": "^[0-9]+[smhd]$"
        }
      }
    }
  },
  "required": [
    "project",
    "image"
  ]
}
